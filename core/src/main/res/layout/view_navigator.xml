<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="47dp"
    android:background="#50a4e7"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_nav_left"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_gravity="center_vertical"
        android:padding="15dp"
        android:src="@drawable/actionbar_back" />

    <TextView
        android:id="@+id/tv_nav_center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="我是标题"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <FrameLayout
        android:id="@+id/btn_nav_right"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/btn_nav_right_img"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:src="@drawable/actionbar_add" />

        <TextView
            android:id="@+id/btn_nav_right_txt"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </FrameLayout>

</LinearLayout>